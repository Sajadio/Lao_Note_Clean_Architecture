<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchBoxStyle" parent="Theme.LaoNote">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:autofillHints" tools:targetApi="o" />
        <item name="android:background">@drawable/background_search_box</item>
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:queryHint">@string/search_note</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
        <item name="android:closeIcon">@drawable/ic_close</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:searchHintIcon" tools:targetApi="lollipop_mr1">@drawable/ic_search
        </item>
    </style>

    <style name="StylePickColor">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_of_effect_btn</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/_6sdp</item>
    </style>

    <style name="FieldBottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/_6sdp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/_6sdp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_12sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">@drawable/shape_of_effect_btn</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">@dimen/_6sdp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/cabin_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="FieldsProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">@dimen/_10ssp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_12sdp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
    </style>

    <style name="LoginButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cabin_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ContainerProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:weightSum">2</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/shape_of_effect_btn</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/loading</item>
        <item name="DialogSpotColor">@color/colorYellow</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_margin">@dimen/_30sdp</item>
        <item name="android:background">@drawable/background_add_btn</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="IconsBottomBar">
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:background">@drawable/shape_of_effect_btn_round</item>
    </style>

</resources>