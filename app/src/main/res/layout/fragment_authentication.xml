<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sajjadio.laonote.presentation.ui.fragments.auth.AuthViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecond">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_30sdp"
                android:fontFamily="@font/bungee_regular"
                android:gravity="center"
                android:text="@string/main_welcome"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_24ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_email"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:hint="@string/email"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_40sdp"
                    android:text="@={viewModel.email}"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_16ssp"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_phoneNumber"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="@dimen/_16sdp"
                android:hint="@string/password"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/layout_email"
                app:layout_constraintStart_toStartOf="@+id/layout_email"
                app:layout_constraintTop_toBottomOf="@+id/layout_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/_40sdp"
                    android:text="@={viewModel.password}"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_16ssp"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/forgotPass"
                style="@style/BtnAuthentication"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/recovery_password"
                app:layout_constraintEnd_toEndOf="@+id/layout_phoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/layout_phoneNumber" />

            <TextView
                android:id="@+id/logIn"
                style="@style/LoginButtons"
                android:background="@drawable/background_sing_in"
                android:onClick="@{() -> viewModel.logIn()}"
                android:text="@string/log_in"
                app:layout_constraintEnd_toEndOf="@+id/forgotPass"
                app:layout_constraintStart_toStartOf="@+id/layout_phoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/forgotPass" />


            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@color/colorHint"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/logIn"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/cabin_medium"
                android:gravity="center"
                android:text="@string/or_continue"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/logIn"
                app:layout_constraintStart_toStartOf="@+id/logIn"
                app:layout_constraintTop_toBottomOf="@+id/logIn" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@color/colorHint"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/logIn"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />


            <TextView
                android:id="@+id/google"
                style="@style/LoginButtons"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/shape_of_primary_color"
                android:paddingStart="@dimen/_6sdp"
                android:text="@string/log_in_with_google"
                app:drawableStartCompat="@drawable/ic_google"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="ContentDescription,RtlSymmetry" />


            <TextView
                android:id="@+id/skip"
                style="@style/BtnAuthentication"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/skip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/google"
                app:layout_constraintStart_toStartOf="@+id/google"
                app:layout_constraintTop_toBottomOf="@+id/google" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>