<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaoNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorYellowNote</item>
        <item name="colorSecondaryVariant">@color/colorYellowNote</item>
        <item name="colorOnSecondary">@color/colorYellowNote</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="ObsoleteSdkInt" tools:targetApi="m">
            false
        </item>
    </style>
</resources>