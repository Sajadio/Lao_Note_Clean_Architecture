<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.sajjadio.laonote.presentation.ui.note.NoteFragment"
        android:label="@string/notes"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_noteFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_noteFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
        <action
            android:id="@+id/action_noteFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.sajjadio.laonote.presentation.ui.note.AddNoteFragment"
        android:label="@string/add_note"
        tools:layout="@layout/fragment_add_note" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sajjadio.laonote.presentation.ui.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:enterAnim="@android:anim/fade_in"
            app:launchSingleTop="true"
            app:popUpTo="@+id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sajjadio.laonote.presentation.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.sajjadio.laonote.presentation.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.sajjadio.laonote.presentation.ui.event.EventFragment"
        android:label="EventFragment"
        tools:layout="@layout/fragment_event" />
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.sajjadio.laonote.presentation.ui.task.TaskFragment"
        android:label="TaskFragment"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_taskFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.sajjadio.laonote.presentation.ui.task.AddTaskFragment"
        android:label="AddTaskFragment"
        tools:layout="@layout/fragment_add_task" />

</navigation>